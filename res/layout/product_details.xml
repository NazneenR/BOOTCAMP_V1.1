<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical" android:clickable="true">

  <TextView
      android:id="@+id/product_title"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content" android:textColor="#000000" android:textStyle="bold"
      android:textSize="35dip" android:textIsSelectable="false" android:padding="5dip"
      android:layout_margin="6dip" android:layout_gravity="center" android:gravity="center"/>
  <ImageView
      android:id="@+id/product_image"
      android:layout_width="250dip"
      android:layout_height="200dip" android:layout_margin="8dip" android:cropToPadding="false"
      android:background="#000000" android:adjustViewBounds="true" android:padding="5dip"
      android:layout_gravity="center" android:longClickable="false" android:maxHeight="150dip"
      android:maxWidth="150dip" android:scaleType="fitXY"/>
  <TextView
      android:id="@+id/product_description"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content" android:layout_margin="6dip" android:padding="5dip"
      android:textSize="24dip" android:textColor="#000000"
      android:autoText="false" android:singleLine="false" android:gravity="center"/>
</LinearLayout>